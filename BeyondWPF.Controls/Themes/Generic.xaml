        <ResourceDictionary Source="/BeyondWPF.Controls;component/Themes/CheckBox.xaml" />
        <ResourceDictionary Source="/BeyondWPF.Controls;component/Themes/ScrollBar.xaml" />
        <ResourceDictionary Source="/BeyondWPF.Controls;component/Themes/Slider.xaml" />
        <ResourceDictionary Source="/BeyondWPF.Controls;component/Themes/TabControl.xaml" />
        <ResourceDictionary Source="/BeyondWPF.Controls;component/Themes/Calendar.xaml" />

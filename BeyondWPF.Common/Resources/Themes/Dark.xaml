<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <Color x:Key="BorderLightColor">#FF555555</Color>
    <Color x:Key="ControlLightColor">#FF333333</Color>
    <Color x:Key="ControlDarkColor">#FFCCCCCC</Color>
    <Color x:Key="TextColor">#FFFFFFFF</Color>
    <Color x:Key="ButtonBackgroundColor">#FF1E90FF</Color>
    
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />
    <SolidColorBrush x:Key="ControlLightBrush" Color="{StaticResource ControlLightColor}" />

</ResourceDictionary>
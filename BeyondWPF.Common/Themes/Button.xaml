<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BeyondWPF.Common.Controls;assembly=BeyondWPF.Common"
                    xmlns:helpers="clr-namespace:BeyondWPF.Common.Helpers;assembly=BeyondWPF.Common"
                    xmlns:resources="clr-namespace:BeyondWPF.Common.Resources;assembly=BeyondWPF.Common"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/BeyondWPF.Common;component/Themes/ExtendedContentControl.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Thickness x:Key="ButtonPadding">11,5,11,6</Thickness>
    <CornerRadius x:Key="ControlCornerRadius">4,4,4,4</CornerRadius>
    <CornerRadius x:Key="OverlayCornerRadius">8,8,8,8</CornerRadius>
    <sys:Double x:Key="ControlContentThemeFontSize">14</sys:Double>

    <Color x:Key="ButtonHoverBackgroundColor">#FF629EF8</Color>
    <Color x:Key="ButtonDisabledBackgroundColor">#FF333333</Color>
    <Color x:Key="ButtonDisabledForegroundColor">#FF888888</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#FF2E6FD4</Color>

    <!-- FONTS -->
    <FontFamily x:Key="ContentControlThemeFontFamily">pack://application:,,,/BeyondWPF.Common;component/Fonts/#Inter</FontFamily>

    <!-- Définir les brosses basées sur les couleurs -->
    <SolidColorBrush x:Key="BorderLightBrush" Color="{resources:ThemeResource BorderLightBrush}" />
    <SolidColorBrush x:Key="ControlLightBrush" Color="{resources:ThemeResource ControlLightColor}" />
    <SolidColorBrush x:Key="ControlDarkBrush" Color="{resources:ThemeResource ControlDarkColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{resources:ThemeResource TextColor}" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{resources:ThemeResource ButtonBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonHoverBackgroundBrush" Color="{StaticResource ButtonHoverBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledBackgroundBrush" Color="{StaticResource ButtonDisabledBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonDisabledForegroundBrush" Color="{StaticResource ButtonDisabledForegroundColor}" />
    <SolidColorBrush x:Key="ButtonPressedBackgroundBrush" Color="{StaticResource ButtonPressedBackgroundColor}" />

    <!-- Exemple de style pour un contrôle -->
    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <!-- Adapter la taille au contenu -->
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="Padding" Value="{StaticResource ButtonPadding}" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="Height" Value="Auto" />

        <!-- Autres propriétés -->
        <Setter Property="FontFamily" Value="{StaticResource ContentControlThemeFontFamily}" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource ButtonBackgroundBrush}" />
        
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="helpers:CornerRadiusHelper.CornerRadius" Value="{DynamicResource ControlCornerRadius}" />

        <!-- Utilisation du Template personnalisé -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <controls:ExtendedContentControl 
                        Background="{TemplateBinding Background}"
                        Foreground="{TemplateBinding Foreground}"
                        Content="{TemplateBinding Content}"
                        ContentTemplate="{TemplateBinding ContentTemplate}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Padding="{TemplateBinding Padding}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding helpers:CornerRadiusHelper.CornerRadius}">
                    </controls:ExtendedContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <!-- Triggers pour les états -->
        <Style.Triggers>
            <!-- État Hover -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonHoverBackgroundBrush}" />
            </Trigger>

            <!-- État Disabled -->
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource ButtonDisabledBackgroundBrush}" />
                <Setter Property="Foreground" Value="{StaticResource ButtonDisabledForegroundBrush}" />
            </Trigger>

            <!-- État Toggled (IsPressed) -->
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonPressedBackgroundBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}" />
    
</ResourceDictionary>
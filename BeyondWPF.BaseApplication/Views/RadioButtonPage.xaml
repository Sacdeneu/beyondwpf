<UserControl x:Class="BeyondWPF.BaseApplication.Views.RadioButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="RadioButton Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <WrapPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="Group A" FontSize="18" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <RadioButton GroupName="A" Content="Option 1" Margin="0,5"/>
                    <RadioButton GroupName="A" Content="Option 2" IsChecked="True" Margin="0,5"/>
                    <RadioButton GroupName="A" Content="Option 3" Margin="0,5"/>
                </StackPanel>

                <StackPanel Margin="20">
                    <TextBlock Text="Disabled" FontSize="18" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <RadioButton Content="Unchecked Disabled" IsEnabled="False" Margin="0,5"/>
                    <RadioButton Content="Checked Disabled" IsChecked="True" IsEnabled="False" Margin="0,5"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="BeyondWPF.BaseApplication.Views.CheckBoxPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="CheckBox Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <WrapPanel>
                <StackPanel Margin="20">
                    <TextBlock Text="States" FontSize="18" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <CheckBox Content="Unchecked" Margin="0,5"/>
                    <CheckBox Content="Checked" IsChecked="True" Margin="0,5"/>
                    <CheckBox Content="Indeterminate" IsChecked="{x:Null}" Margin="0,5"/>
                </StackPanel>

                <StackPanel Margin="20">
                    <TextBlock Text="Disabled" FontSize="18" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <CheckBox Content="Unchecked Disabled" IsEnabled="False" Margin="0,5"/>
                    <CheckBox Content="Checked Disabled" IsChecked="True" IsEnabled="False" Margin="0,5"/>
                    <CheckBox Content="Indeterminate Disabled" IsChecked="{x:Null}" IsEnabled="False" Margin="0,5"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="BeyondWPF.BaseApplication.Views.ProgressBarPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ProgressBar Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <TextBlock Text="Determinate" FontSize="18" FontWeight="Medium" Margin="0,10,0,10" Foreground="{DynamicResource TextBrush}"/>
            <ProgressBar Value="30" Height="10" Margin="0,5" Maximum="100"/>
            <ProgressBar Value="70" Height="20" Margin="0,5" Maximum="100"/>
            
             <TextBlock Text="Indeterminate" FontSize="18" FontWeight="Medium" Margin="0,20,0,10" Foreground="{DynamicResource TextBrush}"/>
            <ProgressBar IsIndeterminate="True" Height="10" Margin="0,5"/>
            <ProgressBar IsIndeterminate="True" Height="20" Margin="0,5"/>

             <TextBlock Text="Vertical" FontSize="18" FontWeight="Medium" Margin="0,20,0,10" Foreground="{DynamicResource TextBrush}"/>
            <StackPanel Orientation="Horizontal" Height="150" Margin="0,5">
                 <ProgressBar Orientation="Vertical" Value="40" Maximum="100" Width="10" Margin="5,0"/>
                 <ProgressBar Orientation="Vertical" IsIndeterminate="True" Width="10" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

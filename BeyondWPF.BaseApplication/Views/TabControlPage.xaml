<UserControl x:Class="BeyondWPF.BaseApplication.Views.TabControlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="TabControl Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <TabControl Height="200">
                <TabItem Header="Tab 1">
                    <Grid>
                        <TextBlock Text="Content for Tab 1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Tab 2">
                     <Grid>
                        <TextBlock Text="Content for Tab 2" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Tab 3" IsEnabled="False">
                     <Grid>
                        <TextBlock Text="Disabled Tab content" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>

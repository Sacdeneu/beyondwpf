<UserControl x:Class="BeyondWPF.BaseApplication.Views.SliderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Slider Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <TextBlock Text="Horizontal" FontSize="18" FontWeight="Medium" Margin="0,10,0,10" Foreground="{DynamicResource TextBrush}"/>
            <Slider Value="30" Margin="0,10" Maximum="100"/>
            <Slider Value="50" Margin="0,10" Maximum="100" TickPlacement="BottomRight" TickFrequency="10"/>
            <Slider Value="75" Margin="0,10" Maximum="100" TickPlacement="Both" TickFrequency="10"/>

            <TextBlock Text="Vertical" FontSize="18" FontWeight="Medium" Margin="0,20,0,10" Foreground="{DynamicResource TextBrush}"/>
            <StackPanel Orientation="Horizontal" Height="150">
                <Slider Orientation="Vertical" Value="30" Margin="10,0" Maximum="100"/>
                <Slider Orientation="Vertical" Value="50" Margin="10,0" Maximum="100" TickPlacement="BottomRight" TickFrequency="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>

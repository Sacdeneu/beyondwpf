<UserControl x:Class="BeyondWPF.BaseApplication.Views.ButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Button Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <TextBlock Text="States" FontSize="18" FontWeight="Medium" Margin="0,10,0,10" Foreground="{DynamicResource TextBrush}"/>
            
            <WrapPanel>
                <!-- Enabled -->
                <StackPanel Margin="10">
                    <TextBlock Text="Default" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="Click Me" MinWidth="120" Padding="15,8"/>
                </StackPanel>

                <!-- Disabled -->
                <StackPanel Margin="10">
                    <TextBlock Text="Disabled" Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="Disabled" IsEnabled="False" MinWidth="120" Padding="15,8"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>

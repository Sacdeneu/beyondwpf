<UserControl x:Class="BeyondWPF.BaseApplication.Views.ButtonPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Button Styles" FontSize="24" FontWeight="SemiBold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>
            
            <TextBlock Text="States" FontSize="18" FontWeight="Medium" Margin="0,10,0,10" Foreground="{DynamicResource TextBrush}"/>
            
            <WrapPanel>
                <StackPanel Margin="20" Width="150">
                    <TextBlock Text="Default" FontSize="16" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="Button" Style="{StaticResource DefaultButtonStyle}" Margin="0,5"/>
                    <Button Content="Accent" Style="{StaticResource AccentButtonStyle}" Margin="0,5"/>
                    <Button Content="Danger" Style="{StaticResource DangerButtonStyle}" Margin="0,5"/>
                    <Button Content="Success" Style="{StaticResource SuccessButtonStyle}" Margin="0,5"/>
                </StackPanel>

                <StackPanel Margin="20" Width="150">
                    <TextBlock Text="Disabled" FontSize="16" FontWeight="Medium" Margin="0,0,0,10" Foreground="{DynamicResource TextBrush}"/>
                    <Button Content="Default" IsEnabled="False" Style="{StaticResource DefaultButtonStyle}" Margin="0,5"/>
                    <Button Content="Accent" IsEnabled="False" Style="{StaticResource AccentButtonStyle}" Margin="0,5"/>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
